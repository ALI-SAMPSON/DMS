<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AssignDocumentFragment">

    <LinearLayout
        android:id="@+id/search_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_edittext_background">
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:textColor="@color/dark"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:hint="@string/hint_search"
            android:drawableStart="@drawable/ic_search_grey"
            android:drawablePadding="@dimen/padding_normal"
            app:backgroundTint="@color/colorWhite"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
         android:id="@+id/recyclerView"
        android:layout_below="@+id/search_layout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="5dp">
     </android.support.v7.widget.RecyclerView>

    <!-- Main floating action button -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="@dimen/fab_margin_normal"
        android:src="@drawable/ic_assign_doc"
        app:backgroundTint="@color/deep_red"
       android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ghost"
    tools:context=".fragment.UploadDocumentFragment">

    <ImageView
        android:id="@+id/scannedImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="center"
        android:layout_margin="5dp"
        android:background="@drawable/scanned_file"
        app:layout_constraintBottom_toTopOf="@+id/name_layout"/>

    <LinearLayout
        android:id="@+id/name_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_edittext_background"
        app:layout_constraintBottom_toTopOf="@+id/comment_layout">
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:textColor="@color/dark"
            android:inputType="text|textAutoComplete|textAutoCorrect"
            android:hint="@string/hint_name"
            android:drawableStart="@drawable/ic_comment"
            android:drawablePadding="@dimen/padding_normal"
            app:backgroundTint="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_edittext_background"
        app:layout_constraintBottom_toTopOf="@+id/spinner_container">
        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:textColor="@color/dark"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:hint="@string/text_comment"
            android:drawableStart="@drawable/ic_comment"
            android:drawablePadding="@dimen/padding_normal"
            app:backgroundTint="@color/colorWhite"/>

    </LinearLayout>


    <!--TextInputLayout and LinearLayout and spinner View for Voter's Gender-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toTopOf="@+id/upload_btn">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:weightSum="1">
            <!--TextView View  and Spinner View for Voter's Gender-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewGender"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/text_tag"
                android:textSize="16sp"
                android:gravity="center_vertical"
                app:fontFamily="@font/lato"
                android:drawablePadding="@dimen/spacing_normal"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="4dp"
                android:layout_weight="1.11"
                android:drawableStart="@drawable/ic_tag"
                android:layout_marginStart="1dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:weightSum="1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinnerTag"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="58dp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/text_upload"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:fontFamily="@font/lato"
        android:textAllCaps="false"
        android:background="@drawable/round_login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
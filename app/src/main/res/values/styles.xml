<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--This would set the menu item color-->
        <!--<item name="android:textColor">@color/dark</item>
        <item name="android:windowFullscreen">false</item>-->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Theme for document viewer -->
    <style name="NoActionBarDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--This would set the menu item color-->
        <!--<item name="android:textColor">@color/dark</item>
        <item name="android:windowFullscreen">false</item>-->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="NoActionBarFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--This would set the menu item color-->
        <!--<item name="android:textColor">@color/dark</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="android:statusBarColor">@android:color/darker_gray</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="actionBarOverFlowMenuStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/light_green</item>
    </style>

</resources>
